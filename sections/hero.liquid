<div class="hero">
    {%- comment -%}eg a blog post or collection would be linked here{%- endcomment -%}
    <a href="/">
        <div class="hero-image section">
            <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.alt_text }}">
        </div>
        <div class="rich-text">
            <h2 class="heading">
                {{ section.settings.heading }}
            </h2>
            {% if section.settings.description %}
                <div class="subhead">
                    {{ section.settings.description }}
                </div>
            {% endif %}
        </div>
    </a>
</div>

{% schema %}
{

    "name": "Hero Image & Text",
    "limit": 1,
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "alt_text",
            "label": "Image alt text",
            "default": "hero image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Section Heading"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description (optional)",
            "default": "<p>Write description here.</p>"
            }
        ], 
        "presets": [
            {
                "name": "Hero Image & Text",
                "category": "Image"
            }
        ]
    }
{% endschema %}