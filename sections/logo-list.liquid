<div class="logo-list section">
    <h2 class="logo-list-heading center">
        {{ section.settings.title }}
    </h2>
    <div class="logo-container">
        {% for block in section.blocks %}
            <a class="logo-link" href="{{ block.settings.link }}">
                <img src="{{ block.settings.image | img_url: "large" }}" alt="">
            </a>
        {% endfor %}
    </div>
</div>

{% schema %}
{
    "name": "Logo List",
    "max_blocks": 6,
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Logo List"
        }
    ],
    "blocks": [
        {
            "type": "logo_image",
            "name": "logo",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Logo image"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Logo link",
                    "info": "Optional"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Logo list",
            "category": "Image",
            "blocks": [
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                }
            ]
        }
    ]
}
{% endschema %}