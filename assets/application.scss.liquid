/* http://meyerweb.com/eric/tools/css/reset/ 
   v2.0 | 20110126
   License: none (public domain)
*/

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section {
	display: block;
}
body {
	line-height: 1;
}
ol, ul {
	list-style: none;
}
blockquote, q {
	quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
	content: '';
	content: none;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}

/* CUSTOM FONT */

@font-face {
    font-family: "HelveticaNeueLTProBold";
    src: url('{{ "HelveticaNeueLTProBd-210705-005501.woff2" | asset_url }}') format("woff2");
}

/* MIXINS */

@mixin phone {
    @media (max-width: 599px){
        @content;
    }
}

@mixin tablet {
    @media (max-width: 900px){
        @content;
    }
}

@mixin desktop {
    @media (max-width: 1200px){
        @content;
    }
}

/* VARIABLES */

$bold-font: "HelveticaNeueLTProBold", Arial, Helvetica, sans-serif;
$med-font: "Helvetica Neue LT Pro", Arial, Helvetica, sans-serif;

$black: #000000;
$white: #FFFFFF;

$light-black: #333333;
$light-white: #FAFAFA;
$hover-white: #EDEDED;

$text-color: $light-black;
$text-color-white: #CCCCCC;
$text-color-light: #707070;
$text-color-light-white: #AAAAAA;

$border-color: #9a9a9a;
$border-color-white: rgba(255,255,255,0.15);

$standard-border: 1px solid $border-color;
$standard-border-white: 1px solid $border-color-white;

$line-global: 20px;
$card-grid-margin: $line-global/2; // 10px
$gutter-global: $line-global*2; // 40px
$offset-global: $gutter-global;

$header-height: 72px;

$type-headline-lg: 40px;
$type-headline-med: 20px;
$type-headline-sm: 15px;
$type-body-lg: 31px;
$type-body-med: 16px;

$type-bold: 700;
$type-book: 400;

$button-height: $line-global*2;

/* PRESETS */

.container, footer, header {
    padding: 0 $offset-global;
}

.container {
    padding: $offset-global;
}

h1,
.h1 {
  font-size: $type-headline-lg;
  line-height: $line-global * 2;
}

h2,
.h2 {
  font-size: $type-headline-med;
  line-height: $line-global;
  margin-bottom: 5px;
}

body {
    font-weight: $type-book;
    font-size: $type-body-med;
    line-height: $line-global;
    font-family: $bold-font;
}

p {
    font-family: $bold-font;
    font-size: $type-body-med;
    line-height: $line-global;
  }

main {
    padding-top: $header-height;

    @include phone {
        padding-top: 0;
    }
}

.flex {
    display: flex;
}

.space-between {
    justify-content: space-between;
}

.column {
    flex-direction: column;
}

.half {
    width: 50%;
}

// ensure components don't leak from parent
*, ::after, ::before {
    box-sizing: border-box;
}

button, input, option, textarea {
    margin: 0;
    padding: 0;
    background-color: transparent;
    border: none;
    appearance: none;
    box-shadow: none;
    outline: none;
}


/* GLOBAL STYLES */

button {
    margin: 0;
    padding: 0;
    background-color: transparent;
    border: none;
    appearance: none;
    box-shadow: none;
    font-family: inherit;
    outline: none;
}

a {
    text-decoration: none;
    color: $text-color;
    // &:hover {
    //   color: $text-color-light;
    // }
    &::selection {
        background-color: $black;
        color: $white;
    }
  }

/* HEADER */

#header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: $white;
    z-index: 10;

    @include phone {
        position: static;
    }

    .header-inner {
        height: $header-height;
        align-items: center;
        border-bottom: 1px solid;

        @include phone {
            display: none;
        }
    }

    .header-title {
        position: absolute;
        left: 50%;
        transform: translate(-50%);
    }


}


/* SWIPER: IN COLLECTION/PRODUCT CARD & PRODUCT PAGE */

.swiper-slide {
    display: flex;
    justify-content: start;
    align-items: center;
    position: relative;
    user-select: none;

    img {
        width: 100%;
        height: 100%;
        outline-style: none;
        box-shadow: none;
        border-color: transparent;
        object-fit: cover;
    }
}

.swiper-button-prev {
    cursor: url('{{ "cursor-arrow-left.svg" | asset_url }}') 15 8, auto;
}

.swiper-button-next {
    cursor: url('{{ "cursor-arrow-right.svg" | asset_url }}') 15 8, auto;
}

.swiper-button-prev, .swiper-button-next {
    position: absolute;
    top: 0;
    width: 25%;
    height: 100%;
    margin-top: 0;
    outline-style: none;
    box-shadow: none;
    border-color: transparent;
    // remove default slider arrows
    &::after {
        content: none;
    }

    @include phone {
        display: none;
    }
}

/* PRODUCT PAGE */

// $gutter-global = 40px
$product-two-col-width: calc((100% - 40px)/2);

.product-template {
    padding-top: $line-global;
    display: grid;
    grid-template-columns: repeat(2, $product-two-col-width);
    justify-content: space-between;
    margin-bottom: 32px;
    // $header-height: 72px;
    height: calc(100vh - 72px);

    @include phone {
        grid-template-columns: 100%;
    }

    // $header-height = 72px $offset-global = 40px
    .swiper-container-product-page {
        overflow: hidden;
        width: 100%;
        height: calc(100vh - 72px - 40px);
    }

    .swiper-button-next::before {
        background: url('{{ "cursor-arrow-right.svg" | asset_url }}') 24px center no-repeat;
        content: "";
        opacity: 0.45;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        transition: opacity 0.15s;
        background-position: calc(100% - 30px);
    }

    .swiper-button-prev::before {
        background: url('{{ "cursor-arrow-left.svg" | asset_url }}') 24px center no-repeat;
        content: "";
        opacity: 0.45;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        transition: opacity 0.15s;
    }

    .product-images:hover .swiper-button-prev::before,
    .product-images:hover .swiper-button-next::before {
        display: none;
    }

    .product-information {
        flex-direction: column;
        justify-content: space-between;
    }

    .product-title {
        font-size: $type-headline-lg;
    }
    
    .product-description {
        width: 50%;
        margin-bottom: $line-global*2;

        @include phone {
            width: 100%;
        }
    }

    .product-option-row {
        position: relative;
        user-select: none;
    }

    /* VARIANT SELECTORS */

    .product-option-label, #add-to-cart-button {
        padding: $line-global;
        position: relative;
        cursor: pointer;
        border: solid;
        border-color: $black;
        border-width: 1px 1px 0;
        border-right-color: transparent;
        border-left-color: transparent;
        background-color: $white;
        font-size: $type-body-med;
        width: 100%;
        text-align: left;
    }

    #add-to-cart-button {
        letter-spacing: 0.8px;
        &:hover {
            background-color: $light-black;
            color: $white;
        }
    }

    .product-option-label {
        &:hover {
            background: $hover-white;
        }
    }

    .product-option-list {
        position: absolute;
        bottom: $line-global * 3;
        right: 0;
        left: 0;
        background-color: $white;
        border: solid 1px $black;
    }

    .product-option-item {
        padding: 25px;
        cursor: pointer;

        &:nth-child(n+2) {
            box-shadow: inset 0 1px $border-color;
        }

        &:hover {
            background: $hover-white;
        }
    }

}

/* COLLECTION PAGE */

#collection {

    .collection-list {
        flex-wrap: wrap;
    }

    .product-card {
        // $gutter-global = 40px * 3 gutters = 120px
        width: calc((100% - 120px) / 4);
        min-width: 250px;
        margin: $card-grid-margin $card-grid-margin $gutter-global;
        margin-bottom: 32px;
        height: 100%;
    
        @include phone {
        width: 100%;
        }
    }
    
    .product-image-wrapper {
        padding-top: 120%;
        display: block;
        overflow: hidden;
        position: relative;
        margin-bottom: 15px;
    }

    .product-card-price {
        letter-spacing: 0.5px;
    }

    .product-card-colors, .product-card-sizes, .product-sold-out {
        font-family: $med-font;
        font-size: $type-headline-sm;
        margin-top: 5px;
    }

    .swiper-container-product-card {
        overflow: hidden;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .product-card-sizes.size-toggle {
        display: none;
    }
    .product-card-price.price-toggle {
        display: block;
    }

    // only toggle bw price & size list IF product has sizes
    .product-card-title:hover .size-toggle {
        display: block;
    }
    .product-card-title:hover .price-toggle {
        display: none;
    }

}

/* MINI-CART */


#mini-cart.hidden {
    transform: translateX(100%);

    .mini-cart-close-button {
        opacity: 0;
        transition: none;
    }
}

.mini-cart-close-button {
    cursor: pointer;
    position: absolute;
    top: 27px;
    left: 25px;
    right: auto;
    color: inherit;
    font-size: $type-body-med;
    transition: opacity 0.5s 0.1s, padding 0.15s;
}


#mini-cart.hidden::before {
    opacity: 0;
}

#mini-cart {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    height: 100vh;
    width: 100%;
    z-index: 99;
    max-width: 350px;
    background-color: $white;
    padding: $header-height 25px 25px 25px;
    transition-property: transform;

    &::before {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        box-shadow: 0 4px 48px 36px rgba(0,0,0,.25);
        -webkit-box-shadow: 0 4px 48px 36px rgba(0,0,0,.25);
        -moz-box-shadow: 0 4px 48px 36px rgba(0,0,0,.25);
        transition-property: opacity;
        z-index: -1;
    }

}

.mini-cart-image-wrapper {
    width: 140px;
    margin-right: 25px;

    img {
        width: 100%;
    }
}

.mini-cart-rows {
    border-top: 1px solid $black;
    border-bottom: 1px solid $black;
    height: 100%;
    overflow: auto;
}

.mini-cart-item {
    display: flex;
    padding: 25px 0;
}

.mini-cart-item-right {
    flex: 1;
}

.cart-form {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.cart-button {
    cursor: pointer;
    position: relative;
    transition: 0.15s;
    z-index: 999;
    font-size: $type-body-med;
}
    
#mini-cart, mini-cart::before {
    transition-duration: 1s;
    transition-timing-function: cubic-bezier(0.165, 0.84, 0.44, 1);
}

.mini-cart-quantity {
    height: 25px;
    overflow: hidden;
    margin-top: 25px;
    position: relative;
    border: 1px solid;
    border-radius: 13px;

    input {
        width: 100%;
        height: 100%;
        text-align: center;
        line-height: 25px;
    }
}

.mini-cart-quantity-button {
    width: 25px;
    position: absolute;
    top: -4px;
    bottom: 0;
    left: 0;
    cursor: pointer;
}

.mini-cart-quantity-button:last-of-type {
    left: auto;
    right: 0;
}

.checkout-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 50px;
    padding: 0 25px;
    position: relative;
    transition: 0.15s;
    padding-bottom: 1px;
    background: $black;
    color: $white;

    &:hover {
        opacity: 0.85;
    }
}

.checkout-subtotal {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: $header-height;
    padding: 0 25px;
    line-height: $header-height;
}

.outside {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
}

/* MENU DRAWER */
.menu-button {
    font-size: $type-body-med;
}









